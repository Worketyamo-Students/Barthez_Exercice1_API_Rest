generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  user_id  String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String

  // un utilisateur peut avoir plusieurs emprunts
  emprunts Loand[]
}

model Book {
  book_id       String  @id @default(auto()) @map("_id") @db.ObjectId
  title         String  @unique
  author        String
  description   String
  publicateYear Int
  ISBN          String?
  state State @default(disponible)

  // Un livre peut faire l'objet de plusieurs emprunts
  emprunts Loand[]  @relation(fields: [loandID], references: [loand_id])
  loandID  String[] @db.ObjectId
}

model Loand {
  loand_id  String   @id @default(auto()) @map("_id") @db.ObjectId
  loandDate DateTime
  backDate  DateTime

  // un emprunt peut etre pour plusieur livre a la fois
  books  Book[]   @relation(fields: [bookID], references: [book_id])
  bookID String[] @db.ObjectId

  // Un emprunt peut faire allusion a un et un seul utilisateurs
  user   User   @relation(fields: [userID], references: [user_id])
  userID String @db.ObjectId
}

model Notification {
  notification_id String @id @default(auto()) @map("_id") @db.ObjectId
  userID          String
  livreID         String
  message         String
}

enum State {
  emprunte
  disponible
}